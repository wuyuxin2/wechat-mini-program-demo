/* pages/template/list-template.wxss */
.tmpContainer{
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin: 10rpx 0;
}
.avatar_date{
  padding: 10rpx;
}
.avatar_date image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.avatar_date text{
  font-size: 32rpx;
}
.company{
  margin-left: 10rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin:10rpx;
}
.contentImg{
  width:100%;
  height: 460rpx;
}
.content{
  /* 自动换行 */
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  font-size: 32rpx;
  text-indent: 32rpx; /* 缩进 */
}
.collection_love image{
  width:32rpx;
  height: 32rpx;
  vertical-align: middle;/* 垂直对齐方式 */
  margin-right: 10rpx;
}
.collection_love text{
  font-size: 28rpx;
  margin-right: 10rpx;
}